<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CB_5e.Views.EditMoneyPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Hint: You can also add money using the Journal" />
            <Label Text="Platinum Coins (PP):" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding PP}" HorizontalTextAlignment="End"/>
            <Label Text="Gold Coins (GP):" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding GP}" HorizontalTextAlignment="End"/>
            <Label Text="Electrum Coins (EP):" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding EP}" HorizontalTextAlignment="End"/>
            <Label Text="Silver Coins (SP):" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding SP}" HorizontalTextAlignment="End"/>
            <Label Text="Copper Coins (CP):" FontSize="Small"/>
            <Entry Keyboard="Default" Text="{Binding CP}" HorizontalTextAlignment="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>